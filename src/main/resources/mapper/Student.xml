<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.marvin.mybatis.tutorial.mappers.StudentMapper">
    <resultMap type="Student" id="result">
        <result property="id" column="ID" javaType="int"/>
        <result property="name" column="NAME" javaType="string"/>
        <result property="branch" column="BRANCH" javaType="string"/>
        <result property="percentage" column="PERCENTAGE" javaType="int"/>
        <result property="phone" column="PHONE" javaType="string"/>
        <result property="email" column="EMAIL" javaType="string"/>
    </resultMap>

    <insert id="insert" parameterType="Student">
        INSERT INTO STUDENT (NAME, BRANCH, PERCENTAGE, PHONE, EMAIL )
        VALUES (#{name}, #{branch}, #{percentage}, #{phone}, #{email});

        <selectKey keyProperty="id" resultType="int" order="AFTER">
            select last_insert_id() as id
        </selectKey>
    </insert>

    <update id="update" parameterType="Student">
      UPDATE STUDENT SET EMAIL = #{email}, NAME = #{name}, BRANCH = #{branch}, PERCENTAGE = #{percentage}, PHONE = #{phone} WHERE ID = #{id};
    </update>

    <delete id="deleteById" parameterType="int">
      DELETE from STUDENT WHERE ID = #{id};
    </delete>

    <select id="getAll" resultMap="result">
      SELECT * FROM STUDENT;
    </select>

    <select id="getById" parameterType="int" resultMap="result">
      SELECT * FROM STUDENT WHERE ID = #{id};
    </select>
</mapper>